---
const { title, subtitle, isLast = false } = Astro.props;
---

<div class="relative flex gap-4 py-0">
  <div class="flex flex-col items-center">
    <div class="w-3 h-3 bg-primary rounded-full"></div>
    {!isLast && <div class="grow w-[2px] bg-primary"></div>}
  </div>

  <div class="flex-1 pb-6">
    <h3 class="font-semibold text-lg leading-snug mb-1">{title}</h3>
    <p class="text-sm text-gray-500 mb-2">{subtitle}</p>
    <div class="text-sm leading-relaxed text-justify space-y-2">
      <slot />
    </div>
  </div>
</div>
